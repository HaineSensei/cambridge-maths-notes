    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build LaTeX",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["build"]
        },
        {
            "name": "Build LaTeX with Book",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["build", "--book"]
        },
        {
            "name": "Setup LaTeX build folders",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["setup"]
        },
        {
            "name": "Format LaTeX",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["fmt"]
        },
        {
            "name": "Optimise PDF outputs",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["optimise"]
        }
    ]
}